@page
@using System.Globalization
@model pos_koperasi.Pages.Cart.IndexModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>Shopping Cart</h1>

@if (!Model.CartItems.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Barang.NamaBarang</td>
                    <td>@item.Barang.Harga.ToString("C")</td>
                    <td>
                        <div class="d-flex align-items-center">
                            @if (item.Quantity > 1)
                            {
                                <form method="post" asp-page-handler="DecreaseQuantity" class="me-2">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">-</button>
                                </form>
                            }
                            <span>@item.Quantity</span>
                            @if (item.Quantity < item.Barang.Stock)
                            {
                                <form method="post" asp-page-handler="IncreaseQuantity" class="ms-2">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-secondary btn-sm">+</button>
                                </form>
                            }
                        </div>
                    </td>
                    <td>@((item.Barang.Harga * item.Quantity).ToString("C", new CultureInfo("id-ID")))</td>
                    <td>
                        <form method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"><strong>Total:</strong></td>
                <td><strong>@Model.Total.ToString("C", new CultureInfo("id-ID"))</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
}

@if (Model.CartItems.Any())
{
    <div class="mt-3">
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <form method="post" asp-page-handler="Purchase">
                <button type="submit" class="btn btn-success">Purchase All Items</button>
            </form>
        }
        else
        {
            <div class="alert alert-warning">
                Please <a asp-page="/Login">login</a> to complete your purchase.
            </div>
        }
    </div>
}