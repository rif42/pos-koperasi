@page "{searchString?}"
@using System.Globalization
@model pos_koperasi.Pages_Barang.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container d-flex justify-content-between py-4 px-0">
    <div class="d-flex justify-content-center">
        @if (User.IsInRole("Admin"))
        {
            <p>
                <a asp-page="Create">
                    <div style="background-color: #2B3A2B; padding: 10px 20px; border-radius: 5px; height: 50px; ">
                        <p class="text-white">Tambah Barang</p>
                    </div>
                </a>
            </p>
        }
    </div>
    <form class method="get">
        <p>
            <label><input type="text" asp-for="SearchString" /></label>
            <input type="submit" value="Cari" />
        </p>
    </form>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="row">
    @foreach (var item in Model.Barang)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" class="card-img-top" alt="@item.NamaBarang"
                        style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center"
                        style="height: 200px;">
                        No Image
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@item.NamaBarang</h5>
                    <p>Price: @item.Harga.ToString("C", new CultureInfo("id-ID"))</p>
                    <p>Stock: @item.Stock</p>
                    <div class="btn-group">
                        <form method="post" asp-page-handler="AddToCart" asp-route-id="@item.Id">
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
