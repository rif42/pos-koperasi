@page "{id:int?}"
@model pos_koperasi.Pages_Barang.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Barang</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form class="d-flex flex-column gap-3" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Barang.Id" />
            <input type="hidden" asp-for="Barang.ImagePath" />
            <div class="form-group d-flex flex-column gap-1">
                <label asp-for="Barang.NamaBarang" class="control-label"></label>
                <input asp-for="Barang.NamaBarang" class="form-control" />
                <span asp-validation-for="Barang.NamaBarang" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column gap-1">
                <label asp-for="Barang.TerakhirUpdate" class="control-label"></label>
                <input asp-for="Barang.TerakhirUpdate" class="form-control" />
                <span asp-validation-for="Barang.TerakhirUpdate" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column gap-1">
                <label asp-for="Barang.Harga" class="control-label"></label>
                <input asp-for="Barang.Harga" class="form-control" />
                <span asp-validation-for="Barang.Harga" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column gap-1">
                <label asp-for="Barang.Stock" class="control-label"></label>
                <input asp-for="Barang.Stock" class="form-control" />
                <span asp-validation-for="Barang.Stock" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column gap-2 mb-3">
                <label asp-for="ImageFile" class="control-label">Product Image</label>
                <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
                @if (!string.IsNullOrEmpty(Model.Barang.ImagePath))
                {
                    <div class="mb-2">
                        <img src="@Model.Barang.ImagePath" alt="Current Image" style="max-width: 200px;" />
                    </div>
                }
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group d-flex gap-3">
                <input type="submit" value="Simpan" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-page="/Barang/Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
